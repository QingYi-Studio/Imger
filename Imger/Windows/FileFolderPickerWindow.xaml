<Window
    x:Class="Imger.Windows.FileFolderPickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Imger - Select file or folder"
    Width="850"
    Height="500"
    FontFamily="MiSans Light"
    ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  路径输入与跳转  -->
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,8,10,0"
            Orientation="Horizontal">
            <TextBox
                x:Name="PathInputBox"
                Width="500"
                Height="30"
                VerticalContentAlignment="Center"
                FontSize="14" />
            <Button
                Width="90"
                Height="30"
                Margin="10,0,0,0"
                Click="JumpButton_Click"
                Content="Jump"
                FontWeight="Bold" />
        </StackPanel>

        <!--  文件夹树  -->
        <TreeView
            Name="FolderTree"
            Grid.Row="1"
            Grid.Column="0"
            FontFamily="OPPOSans M"
            SelectedItemChanged="FolderTree_SelectedItemChanged" FontSize="10" />

        <!--  文件列表  -->
        <ListView
            Name="FileList"
            Grid.Row="1"
            Grid.Column="1"
            MouseDoubleClick="FileList_MouseDoubleClick"
            SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="320"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Name" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Type}"
                        Header="Type" />
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding DateModified}"
                        Header="Modification time" />
                </GridView>
            </ListView.View>
        </ListView>

        <!--  操作按钮  -->
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="90"
                Margin="5"
                Click="OkButton_Click"
                Content="Confirm"
                FontWeight="Bold" />
            <Button
                Width="90"
                Margin="5"
                Click="CancelButton_Click"
                Content="Cancel"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
