<Page
    x:Class="Imger.Pages.OptimizationControlPanel.RealESRGANPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Imger.Pages.OptimizationControlPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Real-ESRGAN Page"
    d:DesignHeight="450"
    d:DesignWidth="480"
    mc:Ignorable="d">

    <Grid>
        <!--#region Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <!--#endregion-->

        <Label
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="3"
            Grid.ColumnSpan="15"
            Content="Real-ESRGAN"
            FontFamily="MiSans Demibold"
            FontSize="18"
            FontWeight="Bold" />
        <Button
            x:Name="BackButton"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="30"
            Grid.ColumnSpan="7"
            Margin="0,7,0,0"
            Click="BackButton_Click"
            Content="Back"
            Cursor="Hand"
            FontFamily="MiSans"
            FontSize="14"
            Foreground="White">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF0078D7" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF0066B4" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF005A9E" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label
            Grid.Row="4"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="Input path"
            FontFamily="MiSans Light"
            FontSize="14" />
        <TextBox
            x:Name="InputPathTextBox"
            Grid.Row="4"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="20"
            Margin="0,5,0,5"
            FontFamily="MiSans ExtraLight"
            MaxLines="1" />
        <Button
            x:Name="SelectInputPathBtn"
            Grid.Row="4"
            Grid.RowSpan="3"
            Grid.Column="32"
            Grid.ColumnSpan="4"
            Margin="0,5,0,5"
            Click="SelectInputPathBtn_Click"
            Content="Select"
            FontFamily="MiSans Normal"
            FontSize="11" />
        <Label
            Grid.Row="7"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="Output path"
            FontFamily="MiSans Light"
            FontSize="14" />
        <TextBox
            x:Name="OutputPathTextBox"
            Grid.Row="7"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="20"
            Margin="0,5,0,5"
            FontFamily="MiSans ExtraLight"
            MaxLines="1" />
        <Button
            x:Name="SelectOutputPathBtn"
            Grid.Row="7"
            Grid.RowSpan="3"
            Grid.Column="32"
            Grid.ColumnSpan="4"
            Margin="0,5,0,5"
            Click="SelectOutputPathBtn_Click"
            Content="Select"
            FontFamily="MiSans Normal"
            FontSize="11" />
        <Label
            Grid.Row="10"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="Scale"
            FontFamily="MiSans Light"
            FontSize="14" />
        <ComboBox
            x:Name="ScaleCombobox"
            Grid.Row="10"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="7"
            Margin="0,5,0,2"
            FontFamily="MiSans Light"
            SelectedIndex="0">
            <ComboBoxItem Content="4" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="3" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="2" FontFamily="MiSans ExtraLight" />
        </ComboBox>
        <Label
            Grid.Row="10"
            Grid.RowSpan="3"
            Grid.Column="20"
            Grid.ColumnSpan="6"
            Content="Tile size"
            FontFamily="MiSans Light"
            FontSize="14" />
        <TextBox
            x:Name="TileSizeTextBox"
            Grid.Row="10"
            Grid.RowSpan="3"
            Grid.Column="26"
            Grid.ColumnSpan="10"
            Margin="0,5,0,5"
            MaxLength="3"
            MaxLines="1"
            Text="0"
            ToolTip="≥32. 0 indicates automatic." />
        <Label
            Grid.Row="13"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="Model"
            FontFamily="MiSans Light"
            FontSize="14" />
        <ComboBox
            x:Name="ModelCombobox"
            Grid.Row="13"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="25"
            Margin="0,5,0,0"
            FontFamily="MiSans Light"
            SelectedIndex="0">
            <ComboBoxItem Content="realesrgan-x4plus" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesrgan-x4plus-anime" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesr-animevideov3-x2" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesr-animevideov3-x3" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesr-animevideov3-x4" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesr-general-x4v3" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="realesr-general-wdn-x4v3" FontFamily="MiSans ExtraLight" />
        </ComboBox>
        <Label
            Grid.Row="17"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="GPU"
            FontFamily="MiSans Light"
            FontSize="14" />
        <ComboBox
            x:Name="GPUCombobox"
            Grid.Row="17"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="25"
            Margin="0,3,0,2"
            FontFamily="MiSans Light"
            SelectedIndex="0" />
        <Label
            Grid.Row="20"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="Thread"
            FontFamily="MiSans Light"
            FontSize="14" />
        <TextBox
            x:Name="ThreadTextBox"
            Grid.Row="20"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="8"
            Margin="0,5,0,5"
            FontFamily="MiSans ExtraLight"
            MaxLength="6"
            MaxLines="1"
            Text="1:2:2"
            ToolTip="The format is Load: Process: Save. Can be 1:2,2,2:2 for multi-gpu." />
        <CheckBox
            x:Name="TTAModeCheckBox"
            Grid.Row="21"
            Grid.RowSpan="2"
            Grid.Column="20"
            Grid.ColumnSpan="16"
            Margin="5,0,0,0"
            Content="TTA(Test-Time Augmentation)"
            FontFamily="MiSans Light"
            ToolTip="Test Time Augmentation (TTA) is a simple yet powerful technique &#10; to improve image segmentation results by applying multiple &#10; transformations to an input image during inference and combining &#10; the outputs. When paired with models like U-Net, it often boosts &#10; performance without retraining." />
        <Label
            Grid.Row="23"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="8"
            Content="File format"
            FontFamily="MiSans Light"
            FontSize="14" />
        <ComboBox
            x:Name="FormatCombobox"
            Grid.Row="23"
            Grid.RowSpan="3"
            Grid.Column="11"
            Grid.ColumnSpan="8"
            Margin="0,5,0,2"
            FontFamily="MiSans Light"
            SelectedIndex="0">
            <ComboBoxItem Content="PNG" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="JPG" FontFamily="MiSans ExtraLight" />
            <ComboBoxItem Content="WebP" FontFamily="MiSans ExtraLight" />
        </ComboBox>
        <Button
            x:Name="LaunchBtn"
            Grid.Row="23"
            Grid.RowSpan="3"
            Grid.Column="28"
            Grid.ColumnSpan="8"
            Margin="0,5,0,0"
            Click="LaunchBtn_Click"
            Content="Launch"
            FontFamily="MiSans Medium"
            FontSize="14"
            FontWeight="Bold" />
        <TextBox
            x:Name="OutputTextBox"
            Grid.Row="27"
            Grid.RowSpan="12"
            Grid.Column="3"
            Grid.ColumnSpan="33"
            FontFamily="MiSans ExtraLight"
            FontSize="10"
            HorizontalScrollBarVisibility="Visible"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Visible">

            <TextBox.Resources>
                <!--  垂直滚动条样式  -->
                <Style x:Key="VerticalScrollBarStyle" TargetType="{x:Type ScrollBar}">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Opacity" Value="0.3" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid>
                                    <Border Background="{TemplateBinding Background}" />
                                    <Track x:Name="PART_Track" IsDirectionReversed="true">
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                        <Rectangle
                                                            Fill="#FFADADAD"
                                                            RadiusX="4"
                                                            RadiusY="4" />
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                                <Thumb.Style>
                                                    <Style TargetType="{x:Type Thumb}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="1" />
                                                            </Trigger>
                                                            <Trigger Property="IsDragging" Value="True">
                                                                <Setter Property="Opacity" Value="1" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Thumb.Style>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!--  水平滚动条样式  -->
                <Style x:Key="HorizontalScrollBarStyle" TargetType="{x:Type ScrollBar}">
                    <Setter Property="Height" Value="8" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Opacity" Value="0.3" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid>
                                    <Border Background="{TemplateBinding Background}" />
                                    <Track x:Name="PART_Track">
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                        <Rectangle
                                                            Fill="#FFADADAD"
                                                            RadiusX="4"
                                                            RadiusY="4" />
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                                <Thumb.Style>
                                                    <Style TargetType="{x:Type Thumb}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="1" />
                                                            </Trigger>
                                                            <Trigger Property="IsDragging" Value="True">
                                                                <Setter Property="Opacity" Value="1" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Thumb.Style>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!--  正确的 ScrollViewer 模板  -->
                <ControlTemplate x:Key="ScrollViewerControlTemplate" TargetType="{x:Type ScrollViewer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />

                        <!--  垂直滚动条  -->
                        <ScrollBar
                            x:Name="PART_VerticalScrollBar"
                            Grid.Row="0"
                            Grid.Column="1"
                            Maximum="{TemplateBinding ScrollableHeight}"
                            Orientation="Vertical"
                            Style="{StaticResource VerticalScrollBarStyle}"
                            ViewportSize="{TemplateBinding ViewportHeight}"
                            Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                            Value="{TemplateBinding VerticalOffset}" />

                        <!--  水平滚动条  -->
                        <ScrollBar
                            x:Name="PART_HorizontalScrollBar"
                            Grid.Row="1"
                            Grid.Column="0"
                            Maximum="{TemplateBinding ScrollableWidth}"
                            Orientation="Horizontal"
                            Style="{StaticResource HorizontalScrollBarStyle}"
                            ViewportSize="{TemplateBinding ViewportWidth}"
                            Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                            Value="{TemplateBinding HorizontalOffset}" />

                        <!--  右下角的小方块  -->
                        <!--<Rectangle
                            Grid.Row="1"
                            Grid.Column="1"
                            Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />-->
                    </Grid>
                </ControlTemplate>

                <!--  TextBox 的模板，使用自定义的 ScrollViewer  -->
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                    <ScrollViewer x:Name="PART_ContentHost" Template="{StaticResource ScrollViewerControlTemplate}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Resources>
        </TextBox>
    </Grid>
</Page>
